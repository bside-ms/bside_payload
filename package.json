{
  "name": "bside-payload",
  "description": "B-Side Website Backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "ts-check": "tsc --noEmit --pretty",
    "ts-check:watch": "yarn ts-check --watch --preserveWatchOutput",
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "yarn copyfiles && yarn build:payload && yarn build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "eslint": "eslint",
    "eslint:fix": "yarn eslint --fix",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write"
  },
  "dependencies": {
    "@boomworks/payload-plugin-author-fields": "^1.1.9",
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-mongodb": "^1.7.1",
    "@payloadcms/plugin-nested-docs": "^1.0.12",
    "@payloadcms/plugin-redirects": "^1.0.2",
    "@payloadcms/plugin-seo": "^2.3.2",
    "@payloadcms/richtext-slate": "^1.5.2",
    "axios": "^1.8.2",
    "dotenv": "^16.4.5",
    "express": "^5.0.0",
    "lodash": "^4.17.21",
    "passport": "^0.6",
    "payload": "^2.25.0",
    "payload-blurhash-plugin": "^2.0.2",
    "payload-plugin-oauth": "^2.2.0",
    "react": "^18",
    "react-dom": "^18",
    "sharp": "^0.34.2",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^24.0.3",
    "@types/passport": "^0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.27.0"
  }
}
